<?xml version="1.0" encoding="UTF-8"?>
<customUI onLoad="Ribbon_Load" xmlns="http://schemas.microsoft.com/office/2006/01/customui">
  <ribbon>
    <tabs>
      <tab idMso="TabAddIns" />
      <tab id="TabProofread" label="工具">
        <group id="Group2" label="用户账户">
          <button id="BtnRibbonLogin" onAction="BtnRibbonLogin_Click" getEnabled="GetLoginEnabled" label="账户登录" getImage="GetIcons" />
          <button id="BtnRibbonLogout" onAction="BtnRibbonLogout_Click" getEnabled="GetLogoutEnabled" label="账户退出" getImage="GetIcons" />
          <button id="BtnRibbonSetting" getEnabled="GetLogoutEnabled" label="设置"  getImage="GetIcons"/>
        </group>
        <group id="Group3" label="导出">
          <button id="BtnRibbonExportContents" onAction="BtnRibbonExportContents_Click" label="导出目录" />
          <button id="BtnRibbonExportIndex" onAction="BtnRibbonExportIndex_Click" label="导出索引" />
        </group>
        <group id="Group6" label="模板">
          <gallery id="GayRibbonTemplateCreate" label="从模板创建" columns="3">
            <item id="__id5" label="AAAA模板" />
            <item id="__id6" label="BBBBB模板" />
            <item id="__id7" label="CCCCC模板" />
            <item id="__id8" label="DDDDD模板" />
            <item id="__id9" label="EEEEE模板" />
          </gallery>
          <button id="BtnRibbonTemplateManage" onAction="BtnRibbonTemplateManage_Click" label="模板管理" />
        </group>
        <group id="Group5" label="窗口">
          <checkBox id="CbxRobbinTaskWindow" onAction="CbxRobbinTaskWindow_Click" getPressed="GetTaskWindowChecked" label="任务窗口" />
        </group>
      </tab>
      <tab id="TabChecking" label="快速审校">
        <group id="G_Checking1" label="字符改动">
          <button id="BtnChecking_1_1" onAction="BtnChecking_Click" label="改正&#13;" size ="large" showImage="true" getImage="GetCheckingIcon" />
          <button id="BtnChecking_1_2" onAction="BtnChecking_Click" label="删除&#13;" size ="large" showImage="true" getImage="GetCheckingIcon" />
          <button id="BtnChecking_1_3" onAction="BtnChecking_Click" label="增补&#13;" size ="large" showImage="true" getImage="GetCheckingIcon" />
          <button id="BtnChecking_1_4" onAction="BtnChecking_Click" label="改正上下角" size ="large" showImage="true" getImage="GetCheckingIcon" />
        </group>
        <group id="G_Checking2" label="方向位置">
          <button id="BtnChecking_2_1" onAction="BtnChecking_Click" label="转正&#13;" size ="large" showImage="true" getImage="GetCheckingIcon" />
          <button id="BtnChecking_2_2" onAction="BtnChecking_Click" label="对调&#13;" size ="large" showImage="true" getImage="GetCheckingIcon" />
          <button id="BtnChecking_2_3" onAction="BtnChecking_Click" label="接排&#13;" size ="large" showImage="true" getImage="GetCheckingIcon" />
          <button id="BtnChecking_2_4" onAction="BtnChecking_Click" label="另起段&#13;" size ="large" showImage="true" getImage="GetCheckingIcon" />
          <button id="BtnChecking_2_5" onAction="BtnChecking_Click" label="转移&#13;" size ="large" showImage="true" getImage="GetCheckingIcon" />
          <button id="BtnChecking_2_6" onAction="BtnChecking_Click" label="上下移&#13;" size ="large" showImage="true" getImage="GetCheckingIcon" />
          <button id="BtnChecking_2_7" onAction="BtnChecking_Click" label="左右移&#13;" size ="large" showImage="true" getImage="GetCheckingIcon" />
          <button id="BtnChecking_2_8" onAction="BtnChecking_Click" label="排齐&#13;" size ="large" showImage="true" getImage="GetCheckingIcon" />
          <button id="BtnChecking_2_9" onAction="BtnChecking_Click" label="排阶梯形&#13;" size ="large" showImage="true" getImage="GetCheckingIcon" />
          <button id="BtnChecking_2_10" onAction="BtnChecking_Click" label="正图&#13;" size ="large" showImage="true" getImage="GetCheckingIcon" />
        </group>
        <group id="G_Checking3" label="字符间距">
          <button id="BtnChecking_3_1" onAction="BtnChecking_Click" label="加大空距&#13;" size ="large" showImage="true" getImage="GetCheckingIcon" />
          <button id="BtnChecking_3_2" onAction="BtnChecking_Click" label="减小空距&#13;" size ="large" showImage="true" getImage="GetCheckingIcon" />
          <button id="BtnChecking_3_3" onAction="BtnChecking_Click" label="空字距&#13;" size ="large" showImage="true" getImage="GetCheckingIcon" />
          <button id="BtnChecking_3_4" onAction="BtnChecking_Click" label="分开&#13;" size ="large" showImage="true" getImage="GetCheckingIcon" />
        </group>
        <group id="G_Checking4" label="其它">
          <button id="BtnChecking_4_1" onAction="BtnChecking_Click" label="保留&#13;" size ="large" showImage="true" getImage="GetCheckingIcon" />
          <button id="BtnChecking_4_2" onAction="BtnChecking_Click" label="代替&#13;" size ="large" showImage="true" getImage="GetCheckingIcon" />
          <button id="BtnChecking_4_3" onAction="BtnChecking_Click" label="说明&#13;" size ="large" showImage="true" getImage="GetCheckingIcon" />
        </group>
      </tab>
      <!-- 内置Tab ↓ -->
      <tab idMso="TabInsert" label="插入" getVisible="GetBuildinVisible" />
      <tab idMso="TabHome" label="开始" getVisible="GetBuildinVisible" />
      <tab idMso="TabWordDesign" label="设计"  getVisible="GetBuildinVisible" />
      <tab idMso="TabPageLayoutWord" label="布局" getVisible="GetBuildinVisible" />
      <tab idMso="TabReferences" label="引用" getVisible="GetBuildinVisible" />
      <tab idMso="TabMailings" label="邮件" getVisible="GetBuildinVisible" />
      <tab idMso="TabReviewWord" label="审阅" getVisible="GetBuildinVisible" />
      <tab idMso="TabView" label="视图" getVisible="GetBuildinVisible" />
      <tab idMso="TabDeveloper" label="开发工具" getVisible="GetBuildinVisible" />
      <tab idMso="TabAddIns" label="加载项" getVisible="GetBuildinVisible" />
      <!-- 内置Tab ↑ -->
    </tabs>
  </ribbon>
</customUI>